# Global Config
[user]
  name = Paul Willoughby
  email = paul@fivetide.com
  #signingkey = **Your GPG ID**

[branch "master"]
  remote = origin
  merge = refs/heads/master

[push]
    #default = upstream

# Fix problems pushing to origin master
# On first push do: git push -u origin <branch>
# @see http://www.lorrin.org/blog/2011/10/03/argumentless-git-pull-and-git-push/
[remote "origin"]
	push = HEAD

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[core]
  pager = less -FRSX
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  editor = /usr/bin/vim
  excludesfile = ~/.gitignore

[merge]
	tool = kdiff3

[alias]
  # branch
  b  = branch
  bc = checkout -b
  bl = branch -v
  bL = branch -av
  bx = branch -d
  bX = branch -D
  bm = branch -m
  bM = branch -M
  bs = show-branch
  bS = show-branch -a

  # checkout/fetch/merge/push/rebase
  # checkout
  co  = checkout
  co0 = checkout HEAD --
  # fetch
  f   = fetch
  fm  = pull
  fo  = fetch origin
  # merge
  m   = merge
  mom = merge origin/master
  mt  = mergetool
  # push
  p   = push
  pa  = push --all
  pt  = push --tags
  # rebase
  r   = rebase
  ra  = rebase --abort
  rc  = rebase --continue
  ri  = rebase --interactive
  rs  = rebase --skip
  rom = rebase origin/master

  # commit
  c      = commit -v
  ca     = commit --all -v
  cm     = commit --message
  cam    = commit --all --message
  camend = commit --amend --reuse-message HEAD
  cundo  = reset --soft "HEAD^"
  cp     = cherry-pick

  # diff
  d    = diff          # Diff working dir to index
  ds   = diff --staged # Diff index to HEAD
  dc   = diff --staged # Diff index to HEAD
  dh   = diff HEAD     # Diff working dir and index to HEAD
  hub  = browse
  hubd = compare

  # index
  s  = status
  a  = add
  ia = add -i
  au = add -u :/
  ir = reset

  # notes
  fn  = fetch origin refs/notes/*:refs/notes/*
  pn  = push origin refs/notes/*
  an  = notes add

  # log
  l   = log --topo-order --pretty=format:'%C(yellow)%h %C(cyan)%cn %C(blue)%cr%C(reset) %s'
  ls  = log --topo-order --stat --pretty=format:'%C(bold)%C(yellow)Commit:%C(reset) %C(yellow)%H%C(red)%d%n%C(bold)%C(yellow)Author:%C(reset) %C(cyan)%an <%ae>%n%C(bold)%C(yellow)Date:%C(reset)   %C(blue)%ai (%ar)%C(reset)%n%+B'
  ld  = log --topo-order --stat --patch --full-diff --pretty=format:'%C(bold)%C(yellow)Commit:%C(reset) %C(yellow)%H%C(red)%d%n%C(bold)%C(yellow)Author:%C(reset) %C(cyan)%an <%ae>%n%C(bold)%C(yellow)Date:%C(reset)   %C(blue)%ai (%ar)%C(reset)%n%+B'
  lg  = log --topo-order --all --graph --pretty=format:'%C(yellow)%h%C(reset) %s %C(red)%d%C(reset)%n'
  lga = log --topo-order --all --graph --pretty=format:'%C(yellow)%h %C(cyan)%cn%C(reset) %s %C(red)%d%C(reset)%n'
  lm  = log --topo-order --pretty=format:'%s'
  ln  = shortlog --summary --numbered
  lh  = log --pretty=format:'%h'
  lhm = log --pretty=format:'%aD %h %s'
  # YAML log data for HTML templates e.g. ly | template.mustache | bcat
  ly  = log --pretty=format:'  - {commit: %h, sha: %H message: \"%s\", author: \"%an <%ae>\"}'
  llf = fsck --lost-found

  # remote
  re  = remote
  rel = remote --verbose
  rea = remote add
  rex = remote rm
  rem = remote rename
